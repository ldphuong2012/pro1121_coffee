<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/ln_mess_u">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name_me"
            android:textSize="20dp"
            android:text="Nhan vien"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar_me"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@color/green1" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_mess_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_mess_user_nv"
        android:text="Xin chÃ o"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/tv_time_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:text="time"
        android:textSize="13dp"/>


</LinearLayout>