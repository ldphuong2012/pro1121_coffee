<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imv_top_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@color/green1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kalam_regular"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_top_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá: 35K"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_top_quantitySold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng bán: 6523"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>