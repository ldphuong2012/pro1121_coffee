<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/custom_bill"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/ln_mana">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bill_time_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian: 18_11_2022 12:36:23"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_bill_name_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin chi tiết:"
                android:textColor="@color/black" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imv_bill_cancel_m"
            android:src="@drawable/ic_mv_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_bill_note_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white3"
        android:paddingLeft="10dp"
        android:text="Cà phê sữa x5 = 30k" />

    <TextView
        android:id="@+id/tv_bill_address_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_bill_number_phone_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/tv_bill_mess_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tv_bill_total_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 450k"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_bill_status_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đang chờ xác nhận"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btn_bill_cancle_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Xác nhận đơn hàng" />

</LinearLayout>