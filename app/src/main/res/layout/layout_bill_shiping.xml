<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/custom_bill1"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/ln_ship">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_time_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian: 18_11_2022 12:36:23"
                android:textColor="@color/green1"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bill_name_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin chi tiết:"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_more_vert_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mv_xanh" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_bill_note_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white3"
        android:paddingLeft="10dp"
        android:text="Cà phê sữa x5 = 30k" />

    <TextView
        android:id="@+id/tv_bill_address_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_bill_number_phone_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/tv_bill_mess_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Hà nội"
        android:textColor="@color/black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_bill_total_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 450k"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_bill_status_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đang giao hàng"
        android:textColor="@color/green1" />

    <Button
        android:id="@+id/btn_bill_cancle_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green1"
        android:text="Xác nhận giao hàng thành công" />

</LinearLayout>